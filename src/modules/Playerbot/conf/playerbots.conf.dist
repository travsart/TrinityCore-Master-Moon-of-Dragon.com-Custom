###################################################################################################
# TRINITYCORE PLAYERBOT CONFIGURATION
#
# This file contains all configuration options for the TrinityCore Playerbot module.
# Copy playerbots.conf.dist to playerbots.conf and modify as needed.
#
# Boolean values: 1 (true), 0 (false)
# Numeric values: Use appropriate ranges as documented
#
###################################################################################################

###################################################################################################
# CORE SETTINGS
#
#    Playerbot.Enable
#        Description: Enable/disable playerbot system entirely
#        Default:     1 (enabled)
#        Note:        Setting to 0 disables all bot functionality
#
#    Playerbot.MaxBots
#        Description: Maximum number of bots that can exist server-wide
#        Default:     100
#        Range:       1-1000
#        Warning:     High values may impact server performance
#
#    Playerbot.MaxBotsPerAccount
#        Description: Maximum number of bot characters per account
#        Default:     10
#        Range:       1-50
#        Note:        Enforced during character creation
#
#    Playerbot.UpdateInterval
#        Description: Bot update interval in milliseconds
#        Default:     100
#        Range:       50-1000
#        Note:        Lower values = more responsive, higher CPU usage
#
#    Playerbot.StartupValidation
#        Description: Perform integrity checks on server startup
#        Default:     1
#        Note:        Validates bot accounts and character limits
#
###################################################################################################

Playerbot.Enable = 1
Playerbot.MaxBots = 100
Playerbot.MaxBotsPerAccount = 10
Playerbot.UpdateInterval = 100
Playerbot.StartupValidation = 1

###################################################################################################
# AI BEHAVIOR
#
#    Playerbot.AI.UpdateDelay
#        Description: AI decision-making update frequency (milliseconds)
#        Default:     500
#        Range:       100-2000
#        Note:        Lower = more responsive, higher = better performance
#
#    Playerbot.AI.CombatDelay
#        Description: Combat action delay (milliseconds)
#        Default:     200
#        Range:       50-1000
#        Note:        Simulates human reaction time in combat
#
#    Playerbot.AI.MovementDelay
#        Description: Movement update frequency (milliseconds)
#        Default:     100
#        Range:       50-500
#        Note:        Affects pathfinding and movement smoothness
#
#    Playerbot.AI.ThinkingDelay
#        Description: Delay between major AI decisions (milliseconds)
#        Default:     1000
#        Range:       500-5000
#        Note:        Prevents overly rapid decision changes
#
#    Playerbot.AI.RandomFactor
#        Description: Randomness in AI behavior (0-100)
#        Default:     25
#        Range:       0-100
#        Note:        Higher values make bots less predictable
#
###################################################################################################

Playerbot.AI.UpdateDelay = 500
Playerbot.AI.CombatDelay = 200
Playerbot.AI.MovementDelay = 100
Playerbot.AI.ThinkingDelay = 1000
Playerbot.AI.RandomFactor = 25

###################################################################################################
# PERFORMANCE
#
#    Playerbot.Performance.EnableMonitoring
#        Description: Enable performance monitoring and logging
#        Default:     1
#        Note:        Tracks CPU, memory, and database usage
#
#    Playerbot.Performance.CPUWarningThreshold
#        Description: CPU usage warning threshold (percentage)
#        Default:     80
#        Range:       50-95
#        Note:        Logs warning when bot CPU usage exceeds this
#
#    Playerbot.Performance.MemoryWarningThreshold
#        Description: Memory usage warning threshold (MB)
#        Default:     1000
#        Range:       100-10000
#        Note:        Total memory usage for all bots
#
#    Playerbot.Performance.MaxCPUPerBot
#        Description: Maximum CPU percentage per bot
#        Default:     0.5
#        Range:       0.1-2.0
#        Note:        Bots exceeding this may be throttled
#
#    Playerbot.Performance.MaxMemoryPerBot
#        Description: Maximum memory usage per bot (MB)
#        Default:     10
#        Range:       5-50
#        Note:        Bots exceeding this may be restarted
#
###################################################################################################

Playerbot.Performance.EnableMonitoring = 1
Playerbot.Performance.CPUWarningThreshold = 80
Playerbot.Performance.MemoryWarningThreshold = 1000
Playerbot.Performance.MaxCPUPerBot = 0.5
Playerbot.Performance.MaxMemoryPerBot = 10

###################################################################################################
# DATABASE
#
#    Playerbot.Database.EnablePooling
#        Description: Enable database connection pooling for bots
#        Default:     1
#        Note:        Improves performance with many bots
#
#    Playerbot.Database.MaxConnections
#        Description: Maximum database connections for bot operations
#        Default:     10
#        Range:       5-50
#        Note:        Should be less than server's max connections
#
#    Playerbot.Database.QueryTimeout
#        Description: Database query timeout (seconds)
#        Default:     30
#        Range:       10-120
#        Note:        Prevents hung database operations
#
#    Playerbot.Database.EnableCaching
#        Description: Enable database query result caching
#        Default:     1
#        Note:        Caches frequently accessed data
#
#    Playerbot.Database.CacheTimeout
#        Description: Cache timeout in seconds
#        Default:     300
#        Range:       60-3600
#        Note:        How long cached data remains valid
#
###################################################################################################

Playerbot.Database.EnablePooling = 1
Playerbot.Database.MaxConnections = 10
Playerbot.Database.QueryTimeout = 30
Playerbot.Database.EnableCaching = 1
Playerbot.Database.CacheTimeout = 300

###################################################################################################
# NAMING SYSTEM
#
#    Playerbot.Names.EnableRandomNames
#        Description: Enable automatic random name generation
#        Default:     1
#        Note:        Uses built-in name pools for bot characters
#
#    Playerbot.Names.PoolSize
#        Description: Size of name pool per race/gender combination
#        Default:     1000
#        Range:       100-10000
#        Note:        Larger pools provide more name variety
#
#    Playerbot.Names.AllowDuplicates
#        Description: Allow duplicate names with different surnames
#        Default:     0
#        Note:        When enabled, uses FirstName + LastName format
#
#    Playerbot.Names.MinLength
#        Description: Minimum character name length
#        Default:     3
#        Range:       2-8
#        Note:        Must comply with server naming rules
#
#    Playerbot.Names.MaxLength
#        Description: Maximum character name length
#        Default:     12
#        Range:       8-16
#        Note:        Must comply with server naming rules
#
###################################################################################################

Playerbot.Names.EnableRandomNames = 1
Playerbot.Names.PoolSize = 1000
Playerbot.Names.AllowDuplicates = 0
Playerbot.Names.MinLength = 3
Playerbot.Names.MaxLength = 12

###################################################################################################
# SOCIAL FEATURES
#
#    Playerbot.Social.EnableChat
#        Description: Enable bot chat responses
#        Default:     0
#        Note:        Bots can respond to whispers and group chat
#
#    Playerbot.Social.ChatChance
#        Description: Probability of bot responding to chat (0-100)
#        Default:     10
#        Range:       0-100
#        Note:        Higher values make bots more talkative
#
#    Playerbot.Social.EnableEmotes
#        Description: Enable bot emote usage
#        Default:     0
#        Note:        Bots will use emotes in appropriate situations
#
#    Playerbot.Social.EmoteChance
#        Description: Probability of bot using emotes (0-100)
#        Default:     5
#        Range:       0-100
#        Note:        Higher values make bots more expressive
#
#    Playerbot.Social.EnableGrouping
#        Description: Allow bots to form and join groups
#        Default:     1
#        Note:        Essential for dungeon and quest functionality
#
#    Playerbot.Social.EnableGuilds
#        Description: Allow bots to join guilds
#        Default:     0
#        Note:        Bots can participate in guild activities
#
#    Playerbot.Social.EnableTrading
#        Description: Allow bots to trade with players and other bots
#        Default:     1
#        Note:        Required for economic participation
#
###################################################################################################

Playerbot.Social.EnableGuilds = 0
Playerbot.Social.EnableChat = 0
Playerbot.Social.ChatChance = 10
Playerbot.Social.EmoteChance = 5
Playerbot.Social.EnableGrouping = 1
Playerbot.Social.EnableTrading = 1

###################################################################################################
# SECURITY
#
#    Playerbot.Security.PreventBotLogin
#        Description: Prevent direct login to bot accounts
#        Default:     1
#        Note:        Bot accounts should only be accessed via bot system
#
#    Playerbot.Security.RestrictBotInteraction
#        Description: Restrict trading/mailing with bots
#        Default:     0
#        Note:        When enabled, limits player-bot economic interaction
#
#    Playerbot.Security.LogBotActions
#        Description: Log all bot actions for audit
#        Default:     0
#        Note:        Creates detailed logs for debugging and monitoring
#
#    Playerbot.Security.PreventBotExploit
#        Description: Prevent exploitation of bot mechanics
#        Default:     1
#        Note:        Implements various anti-exploit measures
#
#    Playerbot.Security.MaxGoldPerBot
#        Description: Maximum gold a bot can carry
#        Default:     1000
#        Range:       1-1000000
#        Note:        Prevents gold accumulation exploits
#
###################################################################################################

Playerbot.Security.PreventBotLogin = 1
Playerbot.Security.RestrictBotInteraction = 0
Playerbot.Security.LogBotActions = 0
Playerbot.Security.PreventBotExploit = 1
Playerbot.Security.MaxGoldPerBot = 1000

###################################################################################################
# EXPERIMENTAL
#
#    Playerbot.Experimental.RandomMovement
#        Description: Enable random movement for idle bots
#        Default:     0
#        Warning:     May impact server performance
#
#    Playerbot.Experimental.BotChat
#        Description: Enable advanced bot chat AI
#        Default:     0
#        Warning:     Experimental feature, may be unstable
#
#    Playerbot.Experimental.BotEmotes
#        Description: Enable context-aware bot emotes
#        Default:     0
#        Warning:     Experimental feature, may be unstable
#
#    Playerbot.Experimental.PathfindingV2
#        Description: Use experimental pathfinding algorithms
#        Default:     0
#        Warning:     May cause navigation issues
#
#    Playerbot.Experimental.Features
#        Description: Enable all experimental features
#        Default:     0
#        Warning:     May cause server instability
#
###################################################################################################

Playerbot.Experimental.RandomMovement = 0
Playerbot.Experimental.BotChat = 0
Playerbot.Experimental.BotEmotes = 0
Playerbot.Experimental.PathfindingV2 = 0
Playerbot.Experimental.Features = 0
