###################################################################################################
# PLAYERBOT MODULE CONFIGURATION
#
# This configuration file controls all aspects of the Playerbot module for TrinityCore.
# Copy this file to playerbots.conf and edit as needed.
#
###################################################################################################

###################################################################################################
# GENERAL SETTINGS
#
#    Playerbot.Enable
#        Description: Enable the Playerbot module
#        Default:     0 (Disabled)
#                     1 (Enabled)
#
#    Playerbot.MaxBotsTotal
#        Description: Maximum number of bot players allowed on the server
#        Default:     100
#        Range:       1-1000
#
#    Playerbot.UpdateInterval
#        Description: How often bots are updated (in milliseconds)
#        Default:     1000
#        Range:       100-10000
#
###################################################################################################

Playerbot.Enable = 0
Playerbot.MaxBotsTotal = 100
Playerbot.UpdateInterval = 1000

###################################################################################################
# ACCOUNT MANAGEMENT - CRITICAL SETTINGS
#
#    Playerbot.MaxBotsPerAccount
#        Description: Maximum number of bot characters each player can control
#        Default:     5
#        Range:       1-50
#
#    Playerbot.MaxCharactersPerAccount
#        Description: Maximum number of characters per bot account
#        Default:     10
#        Range:       1-10
#        IMPORTANT:   HARD LIMIT OF 10 - DO NOT EXCEED
#
#    Playerbot.StrictCharacterLimit
#        Description: Enforce character limit strictly on startup
#                     0 - Allow startup with violations (excess characters disabled)
#                     1 - Abort startup if any bot account exceeds limit
#        Default:     1
#
#    Playerbot.AutoFixCharacterLimit
#        Description: Automatically fix character limit violations
#                     0 - Only report violations
#                     1 - Disable excess characters automatically
#        Default:     0
#
#    Playerbot.BotAccountPrefix
#        Description: Prefix for automatically created bot accounts
#        Default:     "Bot"
#
#    Playerbot.AutoCreateAccounts
#        Description: Enables/disables automatic creation of bot accounts
#                     0 - Manual account management only
#                     1 - Automatically create accounts based on configuration
#        Default:     0
#
#    Playerbot.AccountsToCreate
#        Description: Number of bot accounts to create
#                     If greater than (Playerbot.MaxBotsTotal / 10), this value is used
#                     Otherwise, accounts = Playerbot.MaxBotsTotal / 10
#        Default:     0 (Use calculated value)
#        Range:       0-500
#
###################################################################################################

Playerbot.MaxBotsPerAccount = 5
Playerbot.MaxCharactersPerAccount = 10
Playerbot.StrictCharacterLimit = 1
Playerbot.AutoFixCharacterLimit = 0
Playerbot.BotAccountPrefix = "Bot"
Playerbot.AutoCreateAccounts = 0
Playerbot.AccountsToCreate = 0

###################################################################################################
# CHARACTER CREATION
#
#    Playerbot.AutoCreateCharacters
#        Description: Automatically create bot characters when bot accounts have no characters
#        Default:     1
#
#    Playerbot.RandomBotLevel.Min
#        Description: Minimum level for randomly created bots
#        Default:     1
#        Range:       1-80
#
#    Playerbot.RandomBotLevel.Max
#        Description: Maximum level for randomly created bots
#        Default:     60
#        Range:       1-80
#
#    Playerbot.StartingGear
#        Description: Equipment quality for new bots
#                     0 - No gear
#                     1 - Gray items
#                     2 - White items
#                     3 - Green items
#                     4 - Blue items
#        Default:     2
#
#    Playerbot.UseRealCharacterDistribution
#        Description: Use realistic race/class distribution based on WoW statistics
#        Default:     1
#
#    Playerbot.AllowAllRaceClassCombinations
#        Description: Allow bots to use any race/class combination
#        Default:     0
#
#    Playerbot.PreferredFaction
#        Description: Preferred faction for bot creation
#                     0 - Balanced
#                     1 - Alliance
#                     2 - Horde
#        Default:     0
#
###################################################################################################

Playerbot.AutoCreateCharacters = 1
Playerbot.RandomBotLevel.Min = 1
Playerbot.RandomBotLevel.Max = 60
Playerbot.StartingGear = 2
Playerbot.UseRealCharacterDistribution = 1
Playerbot.AllowAllRaceClassCombinations = 0
Playerbot.PreferredFaction = 0

###################################################################################################
# NAME MANAGEMENT
#
#    Playerbot.UniqueNames
#        Description: Ensure all bot names are unique
#        Default:     1
#
#    Playerbot.NameDatabase
#        Description: Database table containing bot names
#        Default:     "playerbots_names"
#
#    Playerbot.MinAvailableNames
#        Description: Minimum available names before warning
#        Default:     100
#
#    Playerbot.GenerateRandomNames
#        Description: Generate random names if name pool is exhausted
#        Default:     0
#
#    Playerbot.ReservePlayerNames
#        Description: Prevent bots from using active player names
#        Default:     1
#
###################################################################################################

Playerbot.UniqueNames = 1
Playerbot.NameDatabase = "playerbots_names"
Playerbot.MinAvailableNames = 100
Playerbot.GenerateRandomNames = 0
Playerbot.ReservePlayerNames = 1

###################################################################################################
# BOT BEHAVIOR
#
#    Playerbot.BotAI.UpdateDelay
#        Description: Minimum delay between AI updates per bot (milliseconds)
#        Default:     100
#        Range:       10-5000
#
#    Playerbot.BotAI.ReactDelay
#        Description: Reaction time for bots (simulates human reaction)
#        Default:     500
#        Range:       0-2000
#
#    Playerbot.BotAI.MaxCombatDistance
#        Description: Maximum distance bots will engage in combat
#        Default:     40
#        Range:       10-100
#
#    Playerbot.BotAI.RestHealthPercent
#        Description: Health percentage at which bots will rest
#        Default:     60
#        Range:       1-100
#
#    Playerbot.BotAI.RestManaPercent
#        Description: Mana percentage at which bots will rest
#        Default:     40
#        Range:       1-100
#
#    Playerbot.BotAI.Strategy
#        Description: Default AI strategy for bots
#                     "default" - Balanced behavior
#                     "passive" - Defensive, avoid combat
#                     "aggressive" - Seek combat
#                     "helper" - Support players
#        Default:     "default"
#
###################################################################################################

Playerbot.BotAI.UpdateDelay = 100
Playerbot.BotAI.ReactDelay = 500
Playerbot.BotAI.MaxCombatDistance = 40
Playerbot.BotAI.RestHealthPercent = 60
Playerbot.BotAI.RestManaPercent = 40
Playerbot.BotAI.Strategy = "default"

###################################################################################################
# BOT SPAWNING
#
#    Playerbot.AutoLogin
#        Description: Automatically log in bots when server starts
#        Default:     0
#
#    Playerbot.LoginDelay
#        Description: Delay between bot logins (seconds)
#        Default:     5
#        Range:       1-60
#
#    Playerbot.RandomLogout
#        Description: Allow bots to randomly log out/in for realism
#        Default:     0
#
#    Playerbot.LogoutChance
#        Description: Chance per hour for bot to logout (percentage)
#        Default:     10
#        Range:       1-100
#
#    Playerbot.Spawn.MaxTotal
#        Description: Maximum total bots that can be spawned
#        Default:     500
#        Range:       1-5000
#
#    Playerbot.Spawn.MaxPerZone
#        Description: Maximum bots per zone
#        Default:     50
#        Range:       1-200
#
#    Playerbot.Spawn.MaxPerMap
#        Description: Maximum bots per map
#        Default:     200
#        Range:       1-1000
#
#    Playerbot.Spawn.BatchSize
#        Description: Number of bots to spawn at once
#        Default:     10
#        Range:       1-50
#
#    Playerbot.Spawn.DelayMs
#        Description: Delay between spawning each bot (milliseconds)
#        Default:     100
#        Range:       10-5000
#
#    Playerbot.Spawn.Dynamic
#        Description: Enable dynamic bot spawning based on player population
#        Default:     1
#
#    Playerbot.Spawn.RespectCaps
#        Description: Respect population caps when spawning
#        Default:     1
#
#    Playerbot.Spawn.BotToPlayerRatio
#        Description: Ratio of bots to players (e.g., 2.0 = 2 bots per player)
#        Default:     2.0
#        Range:       0.0-10.0
#
#    Playerbot.MinimumBotsPerZone
#        Description: Minimum number of bots per zone even with no players
#        Default:     3
#        Range:       0-20
#
###################################################################################################

Playerbot.AutoLogin = 0
Playerbot.LoginDelay = 5
Playerbot.RandomLogout = 0
Playerbot.LogoutChance = 10
Playerbot.Spawn.MaxTotal = 500
Playerbot.Spawn.MaxPerZone = 50
Playerbot.Spawn.MaxPerMap = 200
Playerbot.Spawn.BatchSize = 10
Playerbot.Spawn.DelayMs = 100
Playerbot.Spawn.Dynamic = 1
Playerbot.Spawn.RespectCaps = 1
Playerbot.Spawn.BotToPlayerRatio = 2.0
Playerbot.MinimumBotsPerZone = 3

###################################################################################################
# PERFORMANCE
#
#    Playerbot.Performance.MaxBotsPerUpdate
#        Description: Maximum number of bots updated per world update
#        Default:     10
#        Range:       1-100
#
#    Playerbot.Performance.UseThreading
#        Description: Use multi-threading for bot AI
#        Default:     0
#
#    Playerbot.Performance.ThreadCount
#        Description: Number of threads for bot AI (if threading enabled)
#        Default:     2
#        Range:       1-8
#
#    Playerbot.Performance.CacheTime
#        Description: How long to cache bot data (seconds)
#        Default:     60
#        Range:       10-600
#
#    Playerbot.Performance.EnableMetrics
#        Description: Track performance metrics
#        Default:     1
#
#    Playerbot.Performance.MetricsInterval
#        Description: Interval for metrics logging (seconds)
#        Default:     300
#
###################################################################################################

Playerbot.Performance.MaxBotsPerUpdate = 10
Playerbot.Performance.UseThreading = 0
Playerbot.Performance.ThreadCount = 2
Playerbot.Performance.CacheTime = 60
Playerbot.Performance.EnableMetrics = 1
Playerbot.Performance.MetricsInterval = 300

###################################################################################################
# DATABASE
#
#    Playerbot.Database.Host
#        Description: Database host for playerbot data
#        Default:     "127.0.0.1"
#
#    Playerbot.Database.Port
#        Description: Database port
#        Default:     3306
#
#    Playerbot.Database.User
#        Description: Database username
#        Default:     "trinity"
#
#    Playerbot.Database.Password
#        Description: Database password
#        Default:     "trinity"
#
#    Playerbot.Database.Name
#        Description: Database name for playerbot tables
#        Default:     "characters"
#
#    Playerbot.Database.WorkerThreads
#        Description: Number of database worker threads
#        Default:     1
#        Range:       1-8
#
#    Playerbot.Database.Type
#        Description: Database location for bot data
#                     "character" - Use character database
#                     "separate" - Use separate database (future)
#        Default:     "character"
#
###################################################################################################

Playerbot.Database.Host = "127.0.0.1"
Playerbot.Database.Port = 3306
Playerbot.Database.User = "trinity"
Playerbot.Database.Password = "trinity"
Playerbot.Database.Name = "characters"
Playerbot.Database.WorkerThreads = 1
Playerbot.Database.Type = "character"

###################################################################################################
# LOGGING
#
#    Playerbot.Log.Level
#        Description: Logging level for playerbot module
#                     0 - Disabled
#                     1 - Error only
#                     2 - Warning and above
#                     3 - Info and above
#                     4 - Debug and above
#                     5 - Trace (everything)
#        Default:     3
#
#    Playerbot.Log.File
#        Description: Log file for playerbot module
#        Default:     "Playerbot.log"
#
#    Playerbot.Log.PerformanceMetrics
#        Description: Log performance metrics
#        Default:     0
#
#    Playerbot.Log.AIDecisions
#        Description: Log AI decision making (debug)
#        Default:     0
#
#    Playerbot.Log.DatabaseQueries
#        Description: Log database queries (debug)
#        Default:     0
#
#    Playerbot.Log.CharacterActions
#        Description: Log character actions (movement, combat, etc)
#        Default:     0
#
###################################################################################################

Playerbot.Log.Level = 3
Playerbot.Log.File = "Playerbot.log"
Playerbot.Log.PerformanceMetrics = 0
Playerbot.Log.AIDecisions = 0
Playerbot.Log.DatabaseQueries = 0
Playerbot.Log.CharacterActions = 0

###################################################################################################
# COMMANDS
#
#    Playerbot.Commands.MinSecurityLevel
#        Description: Minimum GM level required to use playerbot commands
#        Default:     1
#        Range:       0-3
#
#    Playerbot.Commands.AllowPublicBots
#        Description: Allow non-GM players to summon bots
#        Default:     0
#
#    Playerbot.Commands.PublicBotLimit
#        Description: Maximum bots a non-GM player can summon
#        Default:     1
#        Range:       1-10
#
###################################################################################################

Playerbot.Commands.MinSecurityLevel = 1
Playerbot.Commands.AllowPublicBots = 0
Playerbot.Commands.PublicBotLimit = 1

