#
#    Playerbot.Features.RepairEquipment
#        Description: Automatically repair equipment at vendors
#        Default:     1
#
#    Playerbot.Features.BuyAmmo
#        Description: Automatically buy ammunition for hunters
#        Default:     1
#
#    Playerbot.Features.TrainSkills
#        Description: Automatically train skills at trainers
#        Default:     1
#
###################################################################################################

Playerbot.Features.AutoEquip = 1
Playerbot.Features.AutoLearnSpells = 1
Playerbot.Features.AutoAcceptQuests = 1
Playerbot.Features.AutoTurnInQuests = 1
Playerbot.Features.UseFood = 1
Playerbot.Features.UseDrink = 1
Playerbot.Features.SellGrayItems = 1
Playerbot.Features.RepairEquipment = 1
Playerbot.Features.BuyAmmo = 1
Playerbot.Features.TrainSkills = 1

###################################################################################################
# SOCIAL
#
#    Playerbot.Social.EnableGuilds
#        Description: Allow bots to create and join guilds
#        Default:     0
#
#    Playerbot.Social.EnableChat
#        Description: Allow bots to participate in chat
#        Default:     0
#
#    Playerbot.Social.ChatChance
#        Description: Chance for bot to respond in chat (percentage)
#        Default:     10
#        Range:       1-100
#
#    Playerbot.Social.EmoteChance
#        Description: Chance for bot to use emotes (percentage)
#        Default:     5
